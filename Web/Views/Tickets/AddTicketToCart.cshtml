@model Tickets.Domain.DTO.AddToShoppingCartDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add selected ticket to your shopping card!</h3>

<div class="row mt-4">
    <div class="col-md-4 m-auto">
        <form method="post" asp-action="AddTicketToCart" asp-controller="Tickets"> 
            <input type="hidden" asp-for="SelectedTicketId" />
            <input type="hidden" asp-for="SelectedTicket" />
            <div class="form-group">
                <label asp-for="SelectedTicket.Name"></label>
                <input disabled asp-for="SelectedTicket.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>